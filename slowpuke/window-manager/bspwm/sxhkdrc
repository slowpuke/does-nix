### BSPWM GENERAL ###

# restarts bspwm
super + shift + Escape
    bspc wm -r

# close window
super + q
    bspc node -c

# moves window
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# send window to x desktop
super + d + {0-9}
    bspc node -d {0-9}

# send window and move to x desktop
super + m + {0-9}
    bspc node -d {0-9} && bspc dektop -f {0-9}

# toggle between floating and tiled
super + f
    bspc node focused.tiled -t floating || bspc node focused.tiled -t tiled

# swap windows
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# switch to desktop
super + {0-9}
    bscp desktop -f {0-9}

# resize window outwards
ctrl + alt + {h,j,k,l}
    bspc node -z {left -20 0, bottom 0 20, top 0 -20, right 20 0}

# resize window inward
ctrl + super + {h,j,k,l}
    bspc node -z {right -20 0, top 0 20, bottom 0 -20, left 20 0}


### ROFI ###
super + space
    rofi -show drun

super + Escape
    ~/does-nix/slowpuke/rofi/scripts/powermenu.sh

super + b
    ~/does-nix/slowpuke/rofi/scripts/rofi-bluetooth.sh

super + m
    ~/does-nix/slowpuke/rofi/scripts/mounter.sh

super + s
    ~/does-nix/slowpuke/rofi/scripts/screenshot.sh

super + l
    ~/does-nix/slowpuke/rofi/scripts/brightness.sh


### APPLICATION SPECIFIC ###
super + Return
    kitty

