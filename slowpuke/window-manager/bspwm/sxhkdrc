### BSPWM GENERAL ###

# restarts bspwm
super + shift + Escape
    bspc wm -r

# close window
super + q
    bspc node -c

# moves window
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

# send window to x desktop
super + d + {1, 2, 3, 4, 5}
    bspc node -d {I, II, III, IV, V}

# send window and move to x desktop
super + m + {1, 2, 3, 4, 5}
    bspc node -d {I, II, III, IV, V} && bspc dektop -f {I, II, III, IV, V}

# toggle between floating and tiled
super + f
    bspc node -t '~floating'
    # bspc node focused.tiled -t floating || bspc node focused.tiled -t tiled

# toggle fullscreen
super + t 
    bspc node -t '~fullscreen'

# swap windows
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}

# switch to desktop
super + {1, 2, 3, 4, 5}
    bscp desktop -f {I, II, III, IV, V}

# resize window outwards
ctrl + alt + {h,j,k,l}
    bspc node -z {left -20 0, bottom 0 20, top 0 -20, right 20 0}

# resize window inward
ctrl + super + {h,j,k,l}
    bspc node -z {right -20 0, top 0 20, bottom 0 -20, left 20 0}


### ROFI ###
super + space
    rofi -show drun

super + Escape
    ~/does-nix/slowpuke/rofi/scripts/powermenu.sh

super + r + b
    ~/does-nix/slowpuke/rofi/scripts/rofi-bluetooth.sh

super + r + m
    ~/does-nix/slowpuke/rofi/scripts/mounter.sh

super + r + s
    ~/does-nix/slowpuke/rofi/scripts/screenshot.sh

super + r + l
    ~/does-nix/slowpuke/rofi/scripts/brightness.sh


### DUNST ###
super + n + p
    dunstctl history-pop

super + n + c
    dunstctl close-all


### APPLICATION SPECIFIC OPEN ###
super + Return
    kitty

